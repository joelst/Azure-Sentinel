{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",

  "parameters": {
    "CarbonBlack_CustomConnector_Name": {
      "defaultValue": "CarbonBlackConnector",
      "type": "string",
      "metadata": {
        "description": "Name of the custom connector"
      }
    },
    "Service EndPoint": {
      "defaultValue": "https://{CarbonblackBaseURL}",
      "type": "string",
      "metadata": {
        "description": "Carbon Black Cloud base URL (ex: https://defense.conferdeploy.net)"
      }
    },
    "CarbonBlack-TakeDeviceActionFromTeams_Playbook_Name": {
      "defaultValue": "CarbonBlack-TakeDeviceActionFromTeams",
      "type": "string",
      "metadata": {
        "description": "Playbook name "
      }

    },
    "CarbonBlack-DeviceEnrichment_Playbook_Name": {
      "defaultValue": "CarbonBlack-DeviceEnrichment",
      "type": "string",
      "metadata": {
        "description": "Playbook name"
      }
    },
    "CarbonBlack-QuarantineDevice_Playbook_Name": {
      "defaultValue": "CarbonBlack-QuarantineDevice",
      "type": "string",
      "metadata": {
        "description": "Playbook name"
      }
    },
    "OrganizationKey": {
      "defaultValue": "OrganizationKey",
      "type": "string",
      "metadata": {
        "description": "Carbon Black Cloud Organization Key"
      }
    },
    "PolicyId": {
      "defaultValue": 0,
      "type": "int",
      "metadata": {
        "description": "Carbon Black policy Id (Optional: Can be configured in the playbook) For playbook to update policy."
      }
    },
    "Teams_GroupId": {
      "defaultValue": "Teams_GroupId",
      "type": "string",
      "metadata": {
        "description": "Teams Channel Group Id (Optional: Can be configured in the playbook) For playbook to send adaptive card responses from Teams."
      }
    },
    "CustomConnectorName": {
      "defaultValue": "[parameters('CarbonBlack_CustomConnector_Name')]",
      "type": "string"
    },
    "Teams_ChannelId": {
      "defaultValue": "Teams_ChannelId",
      "type": "string",
      "metadata": {
        "description": "Teams Channel Id (Optional: Can be configured in the playbook) For playbook to send adaptive card responses from Teams."
      }
    }
  },
  "variables": {
  },
  "resources": [
    {
      "name": "CarbonBlack_Customconnector_LinkedTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/joelst/Azure-Sentinel/hv/Solutions/CarbonBlack/azuredeploy.json"
        },
        "parameters": {
          "CustomConnectorName": {
            "value": "[parameters('CustomConnectorName')]"
          },
          "Service EndPoint": {
            "value": "[parameters('Service EndPoint')]"
          }
        }
      }
    },
    {
      "name": "CarbonBlack-TakeDeviceActionFromTeams_LinkedTemplate",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'CarbonBlack_Customconnector_LinkedTemplate')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/joelst/Azure-Sentinel/hv/Solutions/CarbonBlack/Playbooks/CarbonBlack-TakeDeviceActionFromTeams/azuredeploy.json"
        },
        "parameters": {
          "PlaybookName": {
            "Value": "[parameters('CarbonBlack-TakeDeviceActionFromTeams_Playbook_Name')]"
          },
          "CustomConnectorName": {
            "Value": "[parameters('CustomConnectorName')]"
          },
          "OrganizationKey": {
            "Value": "[parameters('OrganizationKey')]"
          },
          "PolicyId": {
            "Value": "[parameters('PolicyId')]"
          },
          "Teams GroupId": {
            "Value": "[parameters('Teams_GroupId')]"
          },
          "Teams ChannelId": {
            "Value": "[parameters('Teams_ChannelId')]"
          }
        }
      }
    },
    {
      "name": "CarbonBlack-DeviceEnrichment_LinkedTemplate",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'CarbonBlack_Customconnector_LinkedTemplate')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/joelst/Azure-Sentinel/hv/Solutions/CarbonBlack/Playbooks/CarbonBlack-DeviceEnrichment/azuredeploy.json"
        },
        "parameters": {
          "PlaybookName": {
            "Value": "[parameters('CarbonBlack-DeviceEnrichment_Playbook_Name')]"
          },
          "CustomConnectorName": {
            "Value": "[parameters('CustomConnectorName')]"
          },
          "OrganizationKey": {
            "Value": "[parameters('OrganizationKey')]"
          }
        }
      }
    },
    {
      "name": "CarbonBlack-QuarantineDevice_LinkedTemplate",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'CarbonBlack_Customconnector_LinkedTemplate')]"
      ],
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/joelst/Azure-Sentinel/hv/Solutions/CarbonBlack/Playbooks/CarbonBlack-QuarantineDevice/azuredeploy.json"
        },
        "parameters": {
          "PlaybookName": {
            "Value": "[parameters('CarbonBlack-QuarantineDevice_Playbook_Name')]"
          },
          "CustomConnectorName": {
            "Value": "[parameters('CustomConnectorName')]"
          },
          "OrganizationKey": {
            "Value": "[parameters('OrganizationKey')]"
          }
        }
      }
    }
  ]
}
